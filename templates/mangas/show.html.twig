{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ encore_entry_link_tags('app') }}

<link rel="preconnect" href="https://fonts.googleapis.com"><link rel="preconnect" href="https://fonts.gstatic.com" crossorigin><link href="https://fonts.googleapis.com/css2?family=Bangers&display=swap" rel="stylesheet">
<link rel="stylesheet" href="{{asset('assets/css/card.css')}}">
{% endblock %}

{% block title %}Mangas{% endblock %}

{% block body %}
<div class="mangafont">
<div class="bookAlign">
    <h2>Mangas</h2>
    <div class="bouquin">
        <div class="card text-white bg-success mb-3" style="max-width: 20rem;">
            <div class="card-header">
                <h3>
                    <td>{{ manga.titre }}</td>
                </h3>
            </div>
            <div class="card-body">
                <h4 class="card-title">
                    <td>{{ manga.auteur }}</td>
                </h4>
                <p class="card-text">
                    <td>Tome: {{ manga.tome }}</td>
                    </td>
                </p>
                <p class="card-text">
                    <td>Nombre de volumes : {{ manga.serie }}</td>
                    </td>
                </p>
                <p class="card-text">Stock : {% if mode != null %}
                    <td>Disponible</td> {# voir comment ne pas affiche le nbre mais juste en stock ou non #}
                    {% else %}
                    <td>Indisponible</td> {# voir comment ne pas affiche le nbre mais juste en stock ou non #}
                    {% endif %}</p>
                <p class="card-text">
                    <td>Etat : {{ manga.etat ? 'Neuf' : 'Occasion' }}</td>
                </p>
                <p class="card-text">
                    <td>Prix : {{ manga.prix }} â‚¬uros</td>
                </p>
                <p class="card-text">
                    <td>ISBN : {{ manga.isbn }}</td>
                </p>
            </div>
        </div>
        <div class="cover">
            <img src="{{asset('/uploads/upload/' ~ manga.image)}}"
                onerror="this.src='{{ asset('assets/image/covers/mangas/default.jpg') }}'" alt="">
        </div>

        

    </div>
    <button type="submit" class="btn btn-danger"><a href="{{path('produit.detail',{id: manga.id})}}">Ajouter au panier</a></button>

    <a href="{{ path('app_mangas_index') }}">Back to the futur</a>

</div>
</div>
{% endblock %}