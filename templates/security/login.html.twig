{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ encore_entry_link_tags('app') }}
<link rel="stylesheet" href="{{asset('assets/css/login.css')}}">
{% endblock %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div id="login">
    <form method="post">
        {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
        <div class="mb-3">
            Bienvenue {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">DÃ©conexion</a>
        </div>
        {% endif %}
        <div id="formAlign">
            <h1 class="h3 mb-3 font-weight-normal" class="formAlign">Connectez-vous</h1>
            <label for="inputEmail" class="formAlign">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                autocomplete="email" required autofocus class="formAlign">
            <label for="inputPassword" class="formAlign">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control"
                autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


            {#  Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html #}

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Se souvenir de mon humble personne
                </label>
            </div>


            <button class="btn btn-lg btn-primary" type="submit">
                Connexion
            </button>
            <button class="btn btn-lg btn-warning" type="submit">
                <a href="{{path('app_register')}}">Pas encore de compte ?</a>
            </button>
        </div>
    </form>
</div>
{% endblock %}